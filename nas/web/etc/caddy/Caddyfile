nas.foxden.network {
	root * /mnt/nas
	file_server {
		browse
	}

	forward_auth http://127.0.0.1:1042 {
		uri /
	}
}

archive.ubuntu.com:80, *.archive.ubuntu.com:80 {
	root * /mnt/mirror/apt/mirror/archive.ubuntu.com
	file_server {
		browse
	}

	handle_errors {
		reverse_proxy http://archive.ubuntu.com {
			header_up Host archive.ubuntu.com
		}
	}
}

ports.ubuntu.com:80, *.ports.ubuntu.com:80 {
	root * /mnt/mirror/apt/mirror/ports.ubuntu.com
	file_server {
		browse
	}

	handle_errors {
		reverse_proxy http://ports.ubuntu.com {
			header_up Host ports.ubuntu.com
		}
	}
}

apt.foxden.network:80 {
	root * /mnt/mirror/apt/mirror
	file_server {
		browse
	}
}

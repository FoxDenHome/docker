auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 10.1.1.2
	netmask 255.255.0.0
	gateway 10.1.0.1
	dns-nameservers 10.1.0.53
	hostname ntp
	up ip addr add 10.1.0.123 dev eth0

auto eth0.2
iface eth0.2 inet static
	address 10.2.1.2
	netmask 255.255.0.0
	up ip addr add 10.2.0.123 dev eth0.2

